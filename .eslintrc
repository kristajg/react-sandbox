{
  "rules": {
    "indent": [ 2, 2, {SwitchCase: 1} ],
    "linebreak-style": [ 2, "unix" ],
    "semi": [2, "always"],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used",
        "varsIgnorePattern": "React|Router"
      }
    ],
    "object-curly-spacing": [2, "always"],
    "quotes": [ 2, "single" ]
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "experimentalObjectRestSpread": true,
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],  
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended"
}
